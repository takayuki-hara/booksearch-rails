<%= render 'nav' %>

<!-- メイン -->
<div class="pt-5 pb-5 container">
  <div class="p-3 pt-5">
    <h3>お気に入り一覧</h3>
  </div>

  <p id="notice"><%= notice %></p>

  <h1>Favorites</h1>

  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Book</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @favorites.each do |favorite| %>
        <tr>
          <td><%= favorite.user %></td>
          <td><%= favorite.book %></td>
          <td><%= link_to 'Show', favorite %></td>
          <td><%= link_to 'Edit', edit_favorite_path(favorite) %></td>
          <td><%= link_to 'Destroy', favorite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Keyword', new_favorite_path %>

</div>
