<% @page_category = 'mypage' %>

<!-- メイン -->
<div class="pt-5 pb-5 container">
  <div class="p-3 pt-5">
    <h3>ユーザー詳細</h3>
  </div>

  <p id="notice"><%= notice %></p>

  <p>
    <strong>ユーザー名:</strong>
    <%= @keyword.user.username %>
  </p>

  <p>
    <strong>キーワード:</strong>
    <%= @keyword.keyword %>
  </p>

  <p>
    <strong>ジャンル:</strong>
    <%= @keyword.genre %>
  </p>

  <p>
    <strong>ヒット数:</strong>
    <%= @keyword.item_count %>
  </p>

  <br>
  <%= link_to '設定を編集する', edit_keyword_path(@keyword) %> |
  <%= link_to '一覧に戻る', keywords_path %>

</div>
