<%= render 'nav' %>

<!-- メイン -->
<div class="pt-5 pb-5 container">
  <div class="p-3 pt-5">
    <h3>キーワード一覧</h3>
  </div>

  <p id="notice"><%= notice %></p>

  <h1>Keywords</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>User</th>
        <th>Keyword</th>
        <th>Item count</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @keywords.each do |keyword| %>
        <tr>
          <td><%= keyword.id %></td>
          <td><%= keyword.user.username %></td>
          <td><%= keyword.keyword %></td>
          <td><%= keyword.item_count %></td>
          <td><%= link_to 'Show', keyword %></td>
          <td><%= link_to 'Edit', edit_keyword_path(keyword) %></td>
          <td><%= link_to 'Destroy', keyword, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Keyword', new_keyword_path %>

</div>
