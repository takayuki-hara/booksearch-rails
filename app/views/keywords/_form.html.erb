<%= form_with(model: keyword, local: true) do |form| %>
  <% if keyword.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(keyword.errors.count, "error") %> prohibited this keyword from being saved:</h2>

      <ul>
      <% keyword.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.hidden_field :user_id, :value => @current_user.id %>
  </div>

  <div class="field">
    <%= form.label :keyword %>
    <%= form.text_field :keyword %>
  </div>

  <div class="field">
    <%= form.label :genre %>
    <%= form.select 'genre', get_genres, :selected => '001005' %>
  </div>

  <div class="field">
    <%= form.label :item_count %>
    <%= form.number_field :item_count, :value => 0 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
