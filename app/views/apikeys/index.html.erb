<%= render 'nav' %>

<!-- メイン -->
<div class="pt-5 pb-5 container">
  <div class="p-3 pt-5">
    <h3>一覧</h3>
  </div>
  
  <p id="notice"><%= notice %></p>

  <h1>Apikeys</h1>

  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Key</th>
        <th>Created At</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @apikeys.each do |apikey| %>
        <tr>
          <td><%= apikey.id %></td>
          <td><%= apikey.key %></td>
          <td><%= apikey.created_at %></td>
          <td><%= link_to 'Show', apikey %></td>
          <td><%= link_to 'Edit', edit_apikey_path(apikey) %></td>
          <td><%= link_to 'Destroy', apikey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Apikey', new_apikey_path %>

</div>
