<%= render 'nav' %>

<!-- メイン -->
<div class="pt-5 pb-5 container">
  <div class="p-3 pt-5">
    <h3>リリースウォッチ一覧</h3>
  </div>

  <p id="notice"><%= notice %></p>

  <h1>Release Watches</h1>

  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Book</th>
        <th>Sales date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @release_watches.each do |release_watch| %>
        <tr>
          <td><%= release_watch.user %></td>
          <td><%= release_watch.book %></td>
          <td><%= release_watch.sales_date %></td>
          <td><%= link_to 'Show', release_watch %></td>
          <td><%= link_to 'Edit', edit_release_watch_path(release_watch) %></td>
          <td><%= link_to 'Destroy', release_watch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Release Watch', new_release_watch_path %>

</div>


